#include<stdio.h>

int main()
{
    int n,k, i, j, count=2, sum=1, multiple = 1,add,h=2,g=0,m;
    int arr[300];
    scanf("%d", &n);
    for(k = 2; k <= n; k++)
    {
        for(i = count; i >= count; i++)
        {
            for(j = 1; j <= i; j++)

            {
                count++;
                multiple = multiple*count;
               // printf("%d\n", multiple);


            }
            count++;
            m=multiple;
            multiple=1;



        }

           add= h+m+g;
            sum=sum+add;


            h=0;
            g=count;

    }
    printf("Sum is = %d\n", sum);
}
